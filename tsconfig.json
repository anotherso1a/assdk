//docs: https://www.tslang.cn/docs/handbook/compiler-options.html
{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "outDir": "./dist/ts_built",
    "declaration": false,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}